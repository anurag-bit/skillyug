# Development Dockerfile for Backend with Hot Reload
FROM node:18-alpine

# Install pnpm and development tools
RUN npm install -g pnpm && apk add --no-cache curl

# Set working directory
WORKDIR /app

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
  adduser -S skillyug -u 1001

# Copy package files
COPY package.json pnpm-lock.yaml* ./
COPY prisma/ ./prisma/

# Install dependencies including dev dependencies
RUN pnpm install --frozen-lockfile

# Copy source code
COPY . .

# Generate Prisma client
RUN pnpm db:generate

# Create dist directory and change ownership to skillyug user
RUN mkdir -p dist && chown -R skillyug:nodejs /app

# Switch to non-root user
USER skillyug

# Expose the port and debugger port
EXPOSE 5000 9229

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:5000/api/test || exit 1

# Default command (can be overridden)
CMD ["pnpm", "dev"]