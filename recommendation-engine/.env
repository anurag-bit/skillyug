# Recommendation Engine Environment Variables

# Service Configuration
PORT=8003
NODE_ENV=development

# Model Configuration
MODEL_CACHE_DIR=./models/cache
MODEL_DOWNLOAD_URL_BASE=https://huggingface.co

# HuggingFace Models (will be downloaded locally)
EMBEDDING_MODEL=google/gemma-2-27b-it
GENERATION_MODEL=google/gemma-2-27b-it

# Local Model Paths (after download)
LOCAL_EMBEDDING_MODEL_PATH=./models/embedding-gemma-300m
LOCAL_GENERATION_MODEL_PATH=./models/gemma-3-270m

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=course_embeddings

# Course Catalog
COURSE_CATALOG_PATH=./data/course-catalog.pdf

# API Configuration
MAX_RECOMMENDATIONS=5
MIN_SIMILARITY_THRESHOLD=0.7

# Logging
LOG_LEVEL=info

# Model Device Configuration
DEVICE=cpu
MAX_SEQUENCE_LENGTH=512